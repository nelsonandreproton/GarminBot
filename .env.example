# Garmin Connect Credentials
GARMIN_EMAIL=your@email.com
GARMIN_PASSWORD=your_garmin_password

# Telegram Bot
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
# Get by messaging your bot then visiting:
# https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_CHAT_ID=

# Database
DATABASE_PATH=./data/garmin_data.db

# Scheduling (HH:MM format)
DAILY_SYNC_TIME=07:00
DAILY_REPORT_TIME=08:00
WEEKLY_REPORT_DAY=sunday
WEEKLY_REPORT_TIME=23:59

# Timezone (e.g. Europe/Lisbon, Europe/London, America/New_York)
TIMEZONE=Europe/Lisbon

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/bot.log

# Sync retry (minutes after DAILY_SYNC_TIME to retry on failure)
SYNC_RETRY_DELAY_MINUTES=30

# Health check HTTP server (disabled if not set)
# HEALTH_PORT=8080

# Daily alerts in the morning report (true/false)
DAILY_ALERTS=true

# Nutrição (opcional — desativa /comi e barcode se não definido)
# ANTHROPIC_API_KEY=sk-ant-...
